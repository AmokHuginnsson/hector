export DIR_ROOT	?= $(CURDIR)
VERSION				= 0
SUBVERSION		= 0
EXTRAVERSION	= 0
include $(DIR_ROOT)/_aux/common-paths.mk
LIBS						= pthread hcore hconsole hdata dbwrapper tools
TARGET					= hectord
TARGET_CGI			= hector.cgi
TARGET_CODESTATION = codestation
SRC_TARGET			= src
SRC_TARGET_CGI	= cgi
SRC_TARGET_CODESTATION = app/codestation
LINKER_FLAGS_TARGET = -rdynamic
LINKER_FLAGS_TARGET_CODESTATION = -shared --allow-shlib-undefined
EXEC_NAME				= 1exec
TARGETS					= TARGET TARGET_CGI TARGET_CODESTATION
CTAGS	= @CTAGS@

include $(DIR_ROOT)/_aux/inc-helper-pre.mk

ifndef NODEBUG
	COMPILER_PCH_FLAGS=@PCH@
endif
CWARNING_FLAGS								+= @PEDANTIC_ERRORS@ @EXTRA_WARNINGS@ @WARN_SHADOW@
COMPILER_PRIME_FLAGS					+= @DEFS@
LINKER_PRIME_FLAGS +=	@SPECIAL_LINKER_FLAGS@

include $(DIR_ROOT)/_aux/inc-helper-post.mk

cgi-exe:
	g++ -lpthread -lssl -lrt build/hector.cgi/*.o /home/amok/usr/lib/libtools.a /home/amok/usr/lib/libhcore.a -o exec
	strip exec

ifeq ($(CURDIR),$(DIR_BUILD))
-include $(OBJS:.$(OS)=.$(DS))
endif

