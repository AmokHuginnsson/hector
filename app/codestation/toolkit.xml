<?xml version="1.0" encoding="ISO-8859-2"?>
<xsl:stylesheet version="1.0"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	xmlns:hector="http://codestation.org/hector"
	exclude-result-prefixes="hector">
	<xsl:output method="xml"
		encoding="ISO-8859-2"
		indent="yes"
		omit-xml-declaration="yes"
		doctype-public="-//W3C//DTD XHTML 1.1 Strict//EN"
		doctype-system="http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd" />
	<xsl:template match="@* | node()">
		<xsl:copy>
			<xsl:apply-templates select="@* | node()" />
		</xsl:copy>
	</xsl:template>
	<xsl:template match="hector:menu_item">
		<form action="./hector.cgi" method="POST">
			<input type="hidden" name="application" value="codestation" />
			<input type="hidden" name="action" value="menu" />
			<input type="hidden" name="page" value="{@page}" />
			<input class="button" type="submit" name="submit" value="{.}" />
		</form>
	</xsl:template>
	<xsl:template match="hector:menu">
		<div id="menu" class="menu">
			<xsl:apply-templates select="node()" />
		</div>
	</xsl:template>
	<xsl:template match="hector:interface">
		<html>
			<xsl:apply-templates select="node()" />
		</html>
	</xsl:template>
	<xsl:template match="*">
		<xsl:element name="{local-name()}">
			<xsl:apply-templates select="@* | node()" />
		</xsl:element>
	</xsl:template>
</xsl:stylesheet>
